<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/items_display_container"
    tools:context="com.homelybuysapp.zxscan.ItemsDisplayActivity" >
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/items_display_list"
        
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	
    	android:layout_above="@+id/items_display_actions_container"
        >
        
    </ListView>
    <LinearLayout 
	    android:layout_alignParentBottom="true"
	    android:id="@+id/items_display_actions_container"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation = "horizontal"
	    android:padding="5dp"
	     >
    
	<Button android:layout_weight="1"
        android:id="@+id/import_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/import_all"
       	 android:textColor="@color/app_color"
       
        android:background="@drawable/button"
       
         android:fontFamily="sans-serif-light"
       />
    <Button android:layout_weight="1"
        android:id="@+id/import_selected_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/import_selected"
      	android:textColor="@color/app_color"
        android:background="@drawable/button"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="sans-serif-light"
       />
	</LinearLayout>
	
</RelativeLayout>
