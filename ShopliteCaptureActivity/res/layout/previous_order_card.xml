<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >
    <LinearLayout android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width = "0dp"
        android:layout_gravity="center_vertical">
       
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:padding="5dp" >
	        <TextView 
	            android:id="@+id/order_number_view"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_gravity="start|center_vertical"
	            android:textColor="@android:color/black"
	           android:background="#009cda"
	            android:text="Order Id: 2134"
	            android:layout_width="0dp"/>
	        <TextView 
	            android:id="@+id/order_total_items_view"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_gravity="center"
	             android:text="21 items"
	            android:textColor="@android:color/black"
	            android:background="@color/orange_atomic_tangerine"
	            android:layout_width="0dp"/>
	        
	       
	        
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:orientation="horizontal"
	         >
	         <TextView 
	            android:id="@+id/order_amount_view"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	             android:layout_gravity="start|center_vertical"
	           android:text="2000Rs"
	            android:background="@color/aspirinwhite"
	            android:textColor="@android:color/black"
	            android:layout_width="0dp"/>
	       <TextView 
	            android:id="@+id/order_date_view"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="#999"
	             android:layout_gravity="center"
	           android:text="12th Novemeber 2014"
	            android:textColor="@color/text_color"
	            android:layout_width="0dp"/>
	        
	    </LinearLayout>
    </LinearLayout>
     <include layout = "@layout/order_status_view_small" />
	   
</LinearLayout>
