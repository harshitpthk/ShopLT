<com.shoplite.UI.CustomDrawer
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_add_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
	
	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
        android:layout_height="match_parent"
	    
	    android:background="@drawable/button_rect"
	    tools:context="eu.livotov.zxscan.AddItem" >
		
	    
	    
			<com.shoplite.UI.BaseCardView
		    
	            android:id="@+id/itemView"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_margin="1dp"
	            android:layout_gravity="top">
	            
            
        	</com.shoplite.UI.BaseCardView>
        	
			<LinearLayout
					android:id="@+id/dialog_action_view"
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					>
		             <View
		                 android:layout_marginTop="20dp"
	       				 android:layout_width="1dp"
	       				 android:layout_height="30dp" 
	        			 android:background="#c1c1c1"/>
    
					    <ImageButton 
					        android:layout_weight="1"
					        android:id="@+id/negative_button"
					        android:layout_width="60dp"
					        android:layout_height="60dp"
					        android:text="@string/cancel"
					       	android:textColor="@color/app_color"
					        android:background="@color/white"
					        android:layout_margin="10dp"
					        android:src="@drawable/reject"
					        android:contentDescription="@string/desc_image_button"
					       
				        />
					    <View
					         android:layout_marginTop="20dp"
		       				 android:layout_width="1dp"
		       				 android:layout_height="30dp" 
		        			 android:background="#c1c1c1"/>
				    
				    	<ImageButton 
					        android:contentDescription="@string/desc_image_button"
					        android:layout_weight="1"
					        android:id="@+id/positive_button"
					        android:layout_width="60dp"
					        android:layout_height="60dp"
					        android:text="@string/add_item"
					      	android:textColor="@color/app_color"
					        android:background="@color/white"
					        android:layout_margin="10dp"
					        android:src="@drawable/accept"
				       />
		    </LinearLayout>
			   
			    

	</FrameLayout>
	<FrameLayout
	    android:id="@+id/simmilar_item_container"
	    android:layout_width="180dp" 
	    android:layout_height="match_parent"
	    android:layout_gravity="end"
	    android:background="#fff"
	    >
	    
		<ListView
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        android:choiceMode="singleChoice"
	        android:id="@+id/left_drawer_add_item"
	        android:background="#fff"/>
	</FrameLayout>
	
</com.shoplite.UI.CustomDrawer>
