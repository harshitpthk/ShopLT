<com.shoplite.UI.CustomDrawer
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_add_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
        android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="eu.livotov.zxscan.AddItem" >
		
	     <Button
	        android:id="@+id/drawer_item_button"
	        android:layout_width="fill_parent"
	        android:layout_height="30dp"
	    	android:background="#816687"
	        android:onClick="show_item_siblings"
	        android:text="More"
	        android:textColor="#fff"
        />
	    
		<it.gmariotti.cardslib.library.view.CardView
		    xmlns:card="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/drawer_item_button"
            card:card_layout_resourceID="@layout/card_thumbnail_layout" 
            android:visibility="invisible"/>
	    
	    <Spinner 
	        android:id="@+id/item_measures"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:drawSelectorOnTop="true"
	        android:layout_below="@+id/cardview"
        />
	    <LinearLayout 
	        android:id="@+id/itemVariableContainer"
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/item_measures">
	    <LinearLayout 
	        android:id="@+id/typePickerContainer"
	          android:orientation="vertical"
	         android:layout_height="wrap_content"
	         android:layout_width="wrap_content"
	         android:layout_margin="20dp">
	        
	        <TextView 
	            android:id="@+id/typePickerHeading"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textAlignment="center"
		        android:text="Measures"
		        android:textSize="18sp"
		        android:textColor="#bbb">
	            
	        </TextView>
	    
		    <NumberPicker
		        android:id="@+id/typePicker"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        
		        >
		        
		    </NumberPicker>
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/qntPickerContainer"
	         
	          android:orientation="vertical"
	          android:layout_height="wrap_content"
	          android:layout_width="wrap_content"
	          android:layout_margin="20dp"
	          >
		    <TextView
		        android:id="@+id/qntPickerHeader"
		        android:layout_height="wrap_content"
		        android:layout_width="match_parent"
		        android:textAlignment="center"
		        android:text="Quantity"
		        android:textSize="18sp"
		        android:textColor="#bbb">
		        
		    </TextView>
	    
		    <NumberPicker
		        android:id="@+id/qntPicker"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		       
		        ></NumberPicker>
	    </LinearLayout>
	    </LinearLayout>
	    

	</RelativeLayout>
	<FrameLayout
	    android:id="@+id/simmilar_item_container"
	    android:layout_width="180dp" 
	    android:layout_height="match_parent"
	    android:layout_gravity="end"
	    android:background="#fff"
	    >
	    
	<it.gmariotti.cardslib.library.view.CardListView
        
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:choiceMode="singleChoice"
        android:id="@+id/left_drawer_add_item"
         android:background="#fff"/>
	</FrameLayout>
	
</com.shoplite.UI.CustomDrawer>
