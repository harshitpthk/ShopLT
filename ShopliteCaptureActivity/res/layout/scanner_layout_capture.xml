<?xml version="1.0" encoding="UTF-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_capture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- The main content view -->
   
   
	<FrameLayout
	    	 android:id="@+id/container"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="#fff"
             android:padding="0.00dp">
             
		<FrameLayout
		   		 android:id="@+id/fragment_container"
	             android:layout_width="fill_parent"
	             android:layout_height="fill_parent" >
			    
			   
     	</FrameLayout>
    
       <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/actions_view"
        android:layout_gravity="bottom"
        />
      
       <ImageButton 
           android:id="@+id/shop_outside_store"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_margin="15dp"
           android:background="@drawable/cart"
           android:contentDescription="@string/shop_offline"
           android:layout_gravity="bottom|left"
           android:onClick="shopOutsideStore"/>
       
        <ImageButton android:id="@+id/shop_at_store"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_margin="15dp"
           android:background="@drawable/scan"
           android:layout_gravity="bottom|center"
           android:contentDescription="@string/shop_at_store"
           android:onClick="shopAtStore"/>
       
       <ImageButton android:id="@+id/orders_list"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_margin="15dp"
           android:layout_gravity="bottom|right"
           android:background="@drawable/orders"
           android:contentDescription="@string/order_history"
           android:onClick="showOrderHistory"/>
     
     	<FrameLayout 
     	    android:id="@+id/map_container"
     	    android:layout_width="fill_parent"
     	    android:layout_height="fill_parent" 
	        android:layout_margin="0dp"
	        android:orientation="vertical">
	        
			<fragment
	        android:name="com.google.android.gms.maps.SupportMapFragment"
	        android:id="@+id/mapFragment"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" 
	        android:background="@drawable/dropshadow_roundborder"           
	        />	
	        
			
	        <LinearLayout 
	            android:id="@+id/shop_details_container"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_gravity="bottom"
	            android:onClick="showFullShopDetails"
	            >
	            <View
        			android:layout_width="fill_parent"
       				android:layout_height="5dp"
       				android:background="@drawable/drop_shadow"
       				android:layout_gravity="top"
       				android:layout_marginTop="-3dp" >
    				</View>
	           		
	        <FrameLayout 
	            android:id="@+id/shop_details_primary"
	            android:layout_width="fill_parent"
	            android:layout_height="150dp"
	            android:orientation="vertical"
	            android:layout_gravity="bottom"
	            android:onClick="showFullShopDetails"
	            >
	            	
	            <LinearLayout 
	                android:id="@+id/shop_details_header"
	                android:layout_height="fill_parent"
	                android:layout_width="fill_parent"
	                android:padding="20dp"
	                android:layout_gravity="left"
	                android:background="#fff"
	                android:orientation="vertical">
	                 
	                <TextView
	                    android:id="@+id/shop_details_heading"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:textSize="19sp"
	                    android:textColor="#999"
	                    
	                    >
	                    </TextView>
	                 <TextView
	                     android:id="@+id/shop_details_description"
	                     android:layout_width="fill_parent"
	                     android:layout_height="wrap_content"
	                     android:textSize="16sp"
	                     android:textColor="#999"
	                    ></TextView>
	                 <RatingBar android:id="@+id/ratingBar"
	                     android:layout_width="40dp"
	                     android:layout_height="10dp"
	                     android:numStars="5"
	                     android:rating="5"
	                     android:isIndicator="true"
	                    
	                      />
	                
	            </LinearLayout>
	            	
    			
	           <Button android:id="@+id/ShopStart"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_margin="20dp"
	               android:text="Continue"
	               android:layout_gravity="right|center_vertical"
	               android:onClick="mapShopContinue"></Button>

	           
	            
	        </FrameLayout>
	       </LinearLayout>
	       
	        
        </FrameLayout>
	 
  		


	</FrameLayout>

 
 <ListView android:id="@+id/left_drawer_capture"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#5A475E"
        android:dividerHeight="0dp"
        android:background="#ffffff"/>

 
</android.support.v4.widget.DrawerLayout>


