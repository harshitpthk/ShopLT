<?xml version="1.0" encoding="UTF-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_capture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- The main content view -->
   
   
	<FrameLayout
	    	 android:id="@+id/container"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="#000"
             android:padding="0.05dp">
             
		<FrameLayout
		   		 android:id="@+id/fragment_container"
	             android:layout_width="fill_parent"
	             android:layout_height="fill_parent" >
			    
			   
     	</FrameLayout>
    
       <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/actions_view"
        android:layout_gravity="bottom"
        />
      
       <ImageButton 
           android:id="@+id/shop_outside_store"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_margin="15dp"
           android:background="@drawable/cart"
           android:contentDescription="@string/shop_offline"
           android:layout_gravity="bottom|left"
           android:onClick="shopOutsideStore"/>
       
        <ImageButton android:id="@+id/shop_at_store"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_margin="15dp"
           android:background="@drawable/scan"
           android:layout_gravity="bottom|center"
           android:contentDescription="@string/shop_at_store"
           android:onClick="shopAtStore"/>
       
       <ImageButton android:id="@+id/orders_list"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_margin="15dp"
           android:layout_gravity="bottom|right"
           android:background="@drawable/orders"
           android:contentDescription="@string/order_history"
           android:onClick="showOrderHistory"/>
     
     	<FrameLayout 
     	    android:id="@+id/map_container"
     	    android:layout_width="fill_parent"
     	    android:layout_height="fill_parent" 
	        android:layout_margin="0dp"
	        android:orientation="vertical">
	        
			<fragment
	        android:name="com.google.android.gms.maps.SupportMapFragment"
	        android:id="@+id/mapFragment"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" 
	        
	        android:background="@drawable/dropshadow_roundborder"           
	        />	
	        <LinearLayout 
	            android:id="@+id/connected_shop_details"
	            android:layout_width="fill_parent"
	            android:layout_height="200dp"
	            android:orientation="vertical"
	            android:layout_gravity="bottom"
	            android:background="#fff"/>
	        <LinearLayout android:id="@+id/map_search_bar"
	            	android:layout_width="match_parent"
	            	android:layout_margin="20dp"
	            	android:layout_height="50dp"
	            	android:orientation="horizontal"
	            	android:background="@drawable/shadow"
	            	
	            >
	            <EditText
	                android:id="@+id/map_search_tv"
	                android:layout_height="match_parent"
	                android:layout_width="wrap_content"
	                android:hint="@string/map_search_text"
	                 android:layout_weight="5"
	                 android:paddingLeft="10dp"
	                 android:textAlignment="center"
	                 android:background="#fff">
	                
	            </EditText>
	            <Button android:id="@+id/map_search_button"
	                android:layout_height="match_parent"
	                android:layout_width="wrap_content"
	                android:onClick="mapShopSearch"
	                android:layout_weight="1"/>
	        </LinearLayout>
	       
	        
        </FrameLayout>
	 
  		


	</FrameLayout>

 
 <ListView android:id="@+id/left_drawer_capture"
        android:layout_width="250dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#5A475E"
        android:dividerHeight="0dp"
        android:background="#ffffff"/>

 
</android.support.v4.widget.DrawerLayout>


