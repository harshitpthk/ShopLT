<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
   	android:paddingRight="@dimen/activity_horizontal_margin"
   	android:layout_above="@+id/items_display_actions_container"
    android:orientation="vertical"
    tools:context="eu.livotov.zxscan.SettingsActivity" >
    
    
    <FrameLayout 
        android:id="@+id/preference_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >
      <LinearLayout 
          android:id="@+id/profile_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="5dp">
          
          <TextView android:id="@+id/profile_heading"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp"
              android:textStyle="bold"
              android:text="Account"
              android:textSize="18sp"/>
          <LinearLayout android:id="@+id/profile_name_contianer"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              >
              <TextView android:id="@+id/profile_name_heading"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp"
              android:text="Name"
              android:textSize="16sp"/>
              
              <TextView 
              android:id="@+id/profile_name_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp"
              android:text="harshit"
              android:textSize="14sp"/>
              
          </LinearLayout>
          <LinearLayout android:id="@+id/profile_addresses_contianer"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp" 
              >
              <TextView android:id="@+id/profile_address_heading"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp"
              
              android:text="Address"
              android:textSize="16sp"/>
              
              <TextView 
              android:id="@+id/profile_address_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp"
              android:text="T1 garden"
              android:textSize="12sp"/>
              
          </LinearLayout>
           
            <TextView android:id="@+id/huas"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp"
              android:textStyle="bold"
              android:text=""
              android:textSize="16sp"/>
          
          </LinearLayout>
               
    </FrameLayout>
           
    
    <TextView 
        android:id="@+id/version_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/app_color"
        android:text="Version 0.0.1"/>
   
</LinearLayout>
